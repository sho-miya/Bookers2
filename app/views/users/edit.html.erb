<div class="container">
  <h2>User info</h2>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <%= @user.errors.count %>error prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= form_for(@user) do |f| %>
    <div class="field">
    	<h4>Name</h4>
    	<%= f.text_field :name %>
    </div>
    <div class="field">
    	<h4>Image</h4><br>
      <%= f.attachment_field :profile_image %>
    </div>
    <div class="field">
      <h4>Introduction</h4>
      <%= f.text_area :introduction %>
    </div>
    <div class="action">
      <%= f.submit 'Update User' %>
    </div>
  <% end %>
</div>